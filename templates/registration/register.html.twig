{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block clases_body %}dark:bg-slate-950{% endblock %}

{% block body %}
	<div class="bg-white dark:bg-slate-800 rounded-lg shadow-md p-6 mx-auto mt-8 max-w-lg">
		<h1 class="text-2xl font-bold mb-6 text-center text-slate-50">
			<i class="fa-solid fa-user "></i>
			Formulario de registro
			<i class="fa-solid fa-user"></i>
		</h1>
			

		{{ form_start(registrationForm) }}
		<div class="mb-4">
			{{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-gray-700 text-slate-50 font-bold mb-2'}}) }}
			{{ form_widget(registrationForm.email, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', 'placeholder': 'Email'}}) }}
		</div>

		<div class="mb-4">
			{{ form_label(registrationForm.nombre, 'Nombre', {'label_attr': {'class': 'block text-gray-700 text-slate-50 font-bold mb-2'}}) }}
			{{ form_widget(registrationForm.nombre, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', 'placeholder': 'Nombre'}}) }}
		</div>

		<div class="mb-4">
			{{ form_label(registrationForm.apellido, 'Apellido', {'label_attr': {'class': 'block text-gray-700 text-slate-50 font-bold mb-2'}}) }}
			{{ form_widget(registrationForm.apellido, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', 'placeholder': 'Apellido'}}) }}
		</div>

		<div class="mb-4">
			{{ form_label(registrationForm.plainPassword, 'Contraseña', {'label_attr': {'class': 'block text-gray-700 text-slate-50 font-bold mb-2'}}) }}
			{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', 'placeholder': 'Contraseña'}}) }}
		</div>

		<div class="text-center">
			<button type="submit" class="bg-blue-500 hover:bg-blue-700 duration-300 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
				Registrar
			</button>
		</div>
		<div class="flex items-center justify-center mt-6">
			<a class="inline-block align-baseline font-semibold text-sm text-blue-500 hover:text-blue-800 duration-300" href="{{ url('app_login') }}">
				{{ 'Ya tienes cuenta? Inicia sesión.' }}
			</a>
		</div>
		{{ form_end(registrationForm) }}
	</div>


{% endblock %}
