{% extends 'admin/base.html.twig' %}

{% block title %}Coche - {{ coche.matricula }}{% endblock %}

{% block content %}
	<div class="w-full overflow-hidden flex flex-col flex-wrap px-4 py-8 gap-12">
		<h1 class="text-3xl font-semibold dark:text-white">Ver coche</h1>
		<div class="w-full overflow-hidden rounded-lg border border-gray-200 shadow-lg bg-gray-50 px-4 py-8 flex flex-col">
			<div class="flex justify-between gap-4">
				<a href="{{ path('app_coche_edit', {'id': coche.id}) }}" class="text-blue-500 hover:bg-blue-500 hover:text-white border border-blue-500 font-bold py-2 px-4 rounded w-24 text-center duration-300">Editar</a>
				<p class="p-2 font-semibold text-lg">{{ coche.matricula }}</p>
                {{ include('admin/coche/_delete_form.html.twig') }}
			</div>
			<div class="flex flex-col gap-2 p-4">
				<p>Marca</p>
                <p class="rounded border border-gray-300 p-2">{{ coche.marca }}</p>
			</div>
			<div class="flex flex-col gap-2 p-4">
				<p>Modelo</p>
                <p class="rounded border border-gray-300 p-2">{{ coche.modelo }}</p>
			</div>
			<div class="flex flex-col gap-2 p-4">
				<p>Color</p>
                <p class="rounded border border-gray-300 p-2">{{ coche.color }}</p>
			</div>
			<div class="flex flex-col gap-2 p-4">
				<p>CV</p>
                <p class="rounded border border-gray-300 p-2">{{ coche.cv }}</p>
			</div>
			<div class="flex flex-col gap-2 p-4">
				<p>Usuario</p>
                <p class="rounded border border-gray-300 p-2">{{ coche.usuario }}</p>
			</div>
			
		</div>
		<a class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-44 text-center duration-300" href="{{ path('app_coche_index') }}">Volver a la lista</a>

	</div>

{% endblock %}
