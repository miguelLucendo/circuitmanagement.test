{% extends 'admin/base.html.twig' %}

{% block title %}Reserva
{% endblock %}

{% block content %}
	<div class="w-full overflow-hidden flex flex-col flex-wrap px-4 py-8 gap-12">
		<h1 class="text-3xl font-semibold dark:text-white">Reservas</h1>
		<div class="w-full overflow-hidden rounded-lg border border-gray-200 shadow-lg">
			<table class="w-full border-collapse bg-white text-left text-sm text-slate-600">
				<thead class="bg-gray-50">
					<tr>
						<th scope="col" class="px-4 py-4 font-semibold text-slate-800">#</th>
						<th scope="col" class="px-4 py-4 font-semibold text-slate-800">Fecha</th>
						<th scope="col" class="px-4 py-4 font-semibold text-slate-800">Hora inicio</th>
						<th scope="col" class="px-4 py-4 font-semibold text-slate-800">Acciones</th>
					</tr>
				</thead>
				<tbody class="divide-y divide-gray-200 border-t border-gray-100">
					{% for reserva in reservas %}
						<tr class="hover:bg-gray-100 duration-300">
							<th class="px-4 py-4">
								{{ reserva.id }}
							</th>
							<td class="px-4 py-4">
								{{ reserva.fecha ? reserva.fecha|date('d-m-Y') : '' }}
							</td>
							<td class="px-4 py-4">
								{{ reserva.horaInicio }}
							</td>
							<td class="px-4 py-4 flex gap-2">
								<a href="{{ path('app_reserva_show', {'id': reserva.id}) }}" class="text-blue-500 hover:text-blue-700 mr-2">
									<i class="fa-solid fa-magnifying-glass"></i>
								</a>
								<a href="{{ path('app_reserva_edit', {'id': reserva.id}) }}" class="text-blue-500 hover:text-blue-700">
									<i class="fa-solid fa-pen-to-square"></i>
								</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="6" class="px-4 py-4 text-center">
								<i class="fa-solid fa-xmark"></i>
								No se encontraron registros
								<i class="fa-solid fa-xmark"></i>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<a href="{{ path('app_reserva_new') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-44 text-center duration-300">Insertar reserva</a>
	</div>
{% endblock %}
