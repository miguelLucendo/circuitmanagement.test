{% extends 'admin/base.html.twig' %}

{% block title %}Incidente
{% endblock %}

{% block content %}
	<div class="w-full overflow-hidden flex flex-col flex-wrap px-4 py-8 gap-12">
		<h1 class="text-3xl font-semibold dark:text-white">Ver incidente</h1>
		<div class="w-full overflow-hidden rounded-lg border border-gray-200 shadow-lg bg-gray-50 px-4 py-8 flex flex-col">
			<div class="flex justify-between gap-4">
				<a href="{{ path('app_incidente_edit', {'id': incidente.id}) }}" class="text-blue-500 hover:bg-blue-500 hover:text-white border border-blue-500 font-bold py-2 px-4 rounded w-24 text-center duration-300">Editar</a>
				{{ include('admin/incidente/_delete_form.html.twig') }}
			</div>
			<div class="flex flex-col gap-2 p-4">
				<p>Descripcion</p>
				<p class="rounded border border-gray-300 p-2">{{ incidente.descripcion }}</p>
			</div>
			<div class="flex flex-col gap-2 p-4">
				<p>Tipo de incidente</p>
				<p class="rounded border border-gray-300 p-2">{{ incidente.tipoIncidente }}</p>
			</div>
			<div class="flex flex-col gap-2 p-4">
				<p>Coche/s involucrado/s</p>
				<p class="rounded border border-gray-300 p-2">

					{% for cocheIncidente in cochesIncidentesRelacionados %}
						{{ cocheIncidente.coche }}
					{% endfor %}
				</p>
			</div>
			<div class="flex flex-col gap-2 p-4">
				<p>Registrado por</p>
				<p class="rounded border border-gray-300 p-2">{{ incidente.usuario }}</p>
			</div>
		</div>
		<a class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-44 text-center duration-300" href="{{ path('app_incidente_index') }}">Volver a la lista</a>
	</div>
{% endblock %}
